<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gide_bg"
    tools:context="com.dalong.gideview.MainActivity">

    <ImageView
        android:id="@+id/picture1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/picture1"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/picture2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/picture2"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/picture3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/picture3"
        android:visibility="visible" />
    <ImageView
        android:id="@+id/picture4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/picture6"
        android:visibility="visible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gide_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="注册"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/regist_selector"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Button
            android:text="登录"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_margin="5dp"
            android:background="@drawable/login_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
